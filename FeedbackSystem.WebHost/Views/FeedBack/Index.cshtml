@model FeedbackSystem.WebHost.ViewModel.FeedbackViewModel

@{
    ViewBag.Title = "Index";
}

<link type="text/css" rel="stylesheet" href="~/Content/Site.css?" />

<div class="container-fluid">
    <br>
    <div class="col-md-8 col-md-offset-2" id="main-column">
        <div class="new-feedback pad-bottom">
            @using (Html.BeginForm("Create", "FeedBack"))
            {
                <div class="form-group">
                    <label for="feedback">Write a new feedback:</label>
                    @Html.TextAreaFor(s => s.Text, htmlAttributes : new { @class = "form-control", @placeholder = "Write your feedback" })
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            }
        </div>
        @Html.Action("GetAllFeedbacks")
    </div>
</div>

